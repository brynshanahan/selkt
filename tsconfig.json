{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": false,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES2020"
  },
  "exclude": [
    "node_modules"
  ],
}